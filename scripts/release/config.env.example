#!/bin/bash

# GNB 编译上传配置示例
# 复制此文件为 config.env 并填写实际配置

# SSH 服务器配置
export DOWNLOAD_SSH_HOST="your.server.com"              # SSH 服务器地址
export DOWNLOAD_SSH_USER="your_username"                # SSH 用户名
export DOWNLOAD_SSH_PORT="22"                           # SSH 端口 (默认: 22)
export DOWNLOAD_SSH_KEY_PATH="$HOME/.ssh/id_rsa"        # SSH 私钥路径
export DOWNLOAD_SSH_REMOTE_DIR="/path/to/remote/dir"    # 远程存储目录

# 使用示例:
# 1. 复制此文件: cp config.env.example config.env
# 2. 编辑 config.env 填写实际配置
# 3. 使用配置运行: source config.env && ./build_and_upload.sh v1.5.3

echo "✓ 配置已加载"
echo "  服务器: $DOWNLOAD_SSH_USER@$DOWNLOAD_SSH_HOST:$DOWNLOAD_SSH_PORT"
echo "  目标目录: $DOWNLOAD_SSH_REMOTE_DIR"
echo "  SSH 密钥: $DOWNLOAD_SSH_KEY_PATH"
